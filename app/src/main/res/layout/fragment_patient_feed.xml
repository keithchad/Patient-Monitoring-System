<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.feed.PatientFeedFragment">

    <TextView
        android:id="@+id/textFeed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TRENDS"
        android:textSize="20sp"
        android:textAllCaps="true"
        android:textColor="@color/colorBlack"
        android:fontFamily="@font/ubuntu_bold"
        android:gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="12dp"/>

    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipeRefreshFeedPatient"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/textFeed">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewFeedPatient"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            tools:listitem="@layout/feed_item_patient"
            tools:itemCount="7"/>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

</RelativeLayout>